{
  "name": "confirmation-widget",
  "version": "1.0.0",
  "description": "Long Home Confirmation Call Script Helper - Streamline your appointment confirmation calls",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac",
    "build:no-icon": "electron-builder --config.win.icon= --config.icon=",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "widget",
    "confirmation",
    "long-home",
    "appointment"
  ],
  "author": "Long Home",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.longhome.confirmation-helper",
    "productName": "Long Home Confirmation Helper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!website/**/*",
      "!dist/**/*",
      "!*.md",
      "!package-lock.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icon.png",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "icon.png",
      "background": null,
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
